<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 未选中状态 -->
    <item android:state_pressed="false"><shape android:shape="rectangle">
            <solid android:color="@color/red"></solid> <!-- 填充的颜色 -->
            <stroke android:width="0px" android:color="@color/black_overlay" /> <!-- 边框设置 -->
            <corners android:bottomLeftRadius="0dip" android:bottomRightRadius="0dip" android:topLeftRadius="0dip" android:topRightRadius="0dip" /> <!-- 设置按钮的四个角为弧形 -->
            <!-- padding：Button里面的文字与Button边界的间隔 -->
            <padding android:bottom="2dp" android:left="8dp" android:right="8dp" android:top="2dp" />
        </shape></item>
    <!-- 选中状态 -->
    <item android:state_pressed="true"><shape android:shape="rectangle">
            <solid android:color="@color/blue" /> <!-- 填充的颜色 -->
            <stroke android:width="0px" android:color="@color/black_overlay" /> <!-- 边框设置 -->
            <corners android:bottomLeftRadius="0dip" android:bottomRightRadius="0dip" android:topLeftRadius="0dip" android:topRightRadius="0dip" /> <!-- 设置按钮的四个角为弧形 -->
            <!-- padding：Button里面的文字与Button边界的间隔 -->
            <padding android:bottom="2dp" android:left="8dp" android:right="8dp" android:top="2dp" />
        </shape></item>

</selector>