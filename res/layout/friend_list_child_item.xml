<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="5dp" >

    <com.shankes.volley.customview.CircleNetworkImageView
        android:id="@+id/friend_list_child_item_user_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@mipmap/headicon_girl"
        app:border_color="@color/white"
        app:border_width="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/friend_list_child_item_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小小" />

        <TextView
            android:id="@+id/friend_list_child_item_chat_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:text="你好,我是小小"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>